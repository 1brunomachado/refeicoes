---
import "@fontsource-variable/inter";
import "../style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="https://www.sesc-rs.com.br/hs/refeicoescongeladas/favicon.png"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Refeições Congeladas Sesc - Praticidade, sabor e sustentabilidade na sua mesa."
    />

    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-LK7BTRSZQM"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-LK7BTRSZQM");
    </script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
