---
const {
  calories,
  carbohydrate,
  sugars,
  added,
  protein,
  fat,
  saturated,
  trans,
  fiber,
  sodium,
} = Astro.props.post;

const nutritionalData = [
  { label: "Valor energético (kcal)", value: calories.g, vd: calories.vd },
  { label: "Carboidratos (g)", value: carbohydrate.g, vd: carbohydrate.vd },
  { label: "Açucares totais (g)", value: sugars.g, vd: sugars.vd },
  { label: "Açucares adicionados (g)", value: added.g, vd: added.vd },
  { label: "Proteínas (g)", value: protein.g, vd: protein.vd },
  { label: "Gorduras totais (g)", value: fat.g, vd: fat.vd },
  { label: "Gorduras saturadas (g)", value: saturated.g, vd: saturated.vd },
  { label: "Gorduras trans (g)", value: trans.g, vd: trans.vd },
  { label: "Fibra alimentar (g)", value: fiber.g, vd: fiber.vd },
  { label: "Sódio (mg)", value: sodium.g, vd: sodium.vd },
];
---

<div class="grid gap-4 max-w-[488px] w-full h-fit">
  <h3 class="text-2xl font-medium text-[#003180]">Tabela nutricional</h3>

  <table class="w-full text-base">
    <colgroup>
      <col class="w-[60%]" />
      <col class="w-[25%]" />
      <col class="w-[15%]" />
    </colgroup>
    <thead>
      <tr class="text-left">
        <th class="font-medium text-neutral-800">Porção de 100g</th>
        <th class="font-medium text-neutral-800">Total</th>
        <th class="font-medium text-neutral-800">VD*</th>
      </tr>
    </thead>
    <tbody>
      {
        nutritionalData.map((item) => (
          <tr class="text-neutral-600">
            <td class="py-1">{item.label}</td>
            <td class="py-1">{item.value}</td>
            <td class="py-1">{item.vd}%</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
