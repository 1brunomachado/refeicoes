---
import { Image } from "astro:assets";
import Images from "./Images.astro";
import pattern from "../images/pattern.png";

const { slug, title, price, weight } = Astro.props;
---

<div>
  <div>
    <Images src={slug} alt={title} />

    <div>
      <Image
        src={pattern}
        alt="Ícone Refeições Congeladas"
        width={32}
        height={32}
      />

      <h2>
        {title}
      </h2>

      <p>R$ {price}</p>
      <p>{weight}g</p>
    </div>
  </div>
</div>
